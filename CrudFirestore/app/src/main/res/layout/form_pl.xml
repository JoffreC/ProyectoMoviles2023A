<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre del planeta:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_n_pl"
        android:layout_width="313dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Número de lunas:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_n_pl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_n_pl"
        app:layout_constraintTop_toBottomOf="@+id/input_n_pl" />

    <EditText
        android:id="@+id/input_num_l"
        android:layout_width="306dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Diámetro:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_num_l"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_num_l"
        app:layout_constraintTop_toBottomOf="@+id/input_num_l" />

    <EditText
        android:id="@+id/input_d"
        android:layout_width="308dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tiene vida:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/input_d"
        app:layout_constraintTop_toBottomOf="@+id/input_d" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="124dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
        android:text="Clasificación:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rg_tv"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <RadioGroup
        android:id="@+id/rg_tv"
        android:layout_width="179dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/input_d"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/input_d">

        <RadioButton
            android:id="@+id/rb_s"
            android:layout_width="76dp"
            android:layout_height="31dp"
            android:text="Si"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_n"
            android:layout_width="74dp"
            android:layout_height="29dp"
            android:text="No"
            android:textSize="15sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView29"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        app:layout_constraintVertical_bias="0.375">

        <RadioButton
            android:id="@+id/rb_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planeta Rocoso"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planeta Gaseoso"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planeta de Hielo"
            android:textSize="15sp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>