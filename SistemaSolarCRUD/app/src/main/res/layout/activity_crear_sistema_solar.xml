<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nombre del sistema solar:"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.131"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="312dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:layout_constraintEnd_toEndOf="@+id/textView4"
        android:layout_constraintHorizontal_bias="0.013"
        android:layout_constraintStart_toStartOf="@+id/textView4"
        android:layout_constraintTop_toBottomOf="@+id/textView4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nombre_ss"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="Ingrese nombre" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="318dp"
        android:layout_height="76dp"
        android:layout_marginTop="12dp"
        android:layout_constraintEnd_toEndOf="@+id/textView6"
        android:layout_constraintHorizontal_bias="0.0"
        android:layout_constraintStart_toStartOf="@+id/textView6"
        android:layout_constraintTop_toBottomOf="@+id/textView6">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_extension"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:hint="Ingrese extensión" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="@+id/textView3"
        android:layout_constraintHorizontal_bias="0.0"
        android:layout_constraintStart_toStartOf="@+id/textView3"
        android:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_constraintVertical_bias="0.077">

        <RadioButton
            android:id="@+id/rb_es_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estrella Masiva" />

        <RadioButton
            android:id="@+id/rb_en_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enana Roja" />

        <RadioButton
            android:id="@+id/rb_es_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estrella Amarilla" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extensión del sistema solar:"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="@+id/textInputLayout3"
        android:layout_constraintHorizontal_bias="0.014"
        android:layout_constraintStart_toStartOf="@+id/textInputLayout3"
        android:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        android:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Creación de Sistema Solar"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.446"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:layout_constraintBottom_toBottomOf="parent" roid:layout_constraintEnd_toEndOf="parent" roid:layout_constraintHorizontal_bias="0.454" roid:layout_constraintStart_toStartOf="@+id/radioGroup" roid:layout_constraintTop_toBottomOf="@+id/radioGroup" roid:layout_constraintVertical_bias="0.415" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipo de estrella central:"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.097"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>