<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5371DD"
    tools:context=".ListViewSistemas">

    <ListView
        android:id="@+id/ss_list_view"
        android:layout_width="292dp"
        android:layout_height="490dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_añadirSistema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_añadirSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#143670"
        android:text="Añadir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ss_list_view"
        app:layout_constraintStart_toStartOf="@+id/ss_list_view"
        app:rippleColor="#C62F8A78" />
</androidx.constraintlayout.widget.ConstraintLayout>